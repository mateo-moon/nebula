{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": ".",
    "declaration": true,
    "noEmitOnError": true,
    "sourceMap": false,
    "inlineSourceMap": false,
    "inlineSources": false,
    "allowImportingTsExtensions": false
  },
  "include": [
    "src/index.ts",
    "src/core/**/*.ts",
    "src/components/infra/**/*.ts",
    "src/utils/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "**/__tests__/**",
    "cdktf.out",
    ".gen",
    "src/components/secrets/**",
    "src/components/k8s/**",
    "src/k8s/**"
  ]
}


