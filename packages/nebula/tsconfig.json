{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "noEmit": true,
    "paths": {
      "#imports/*": ["./imports/*"]
    }
  },
  "include": ["src/**/*", "imports/**/*", "example/**/*"],
  "exclude": ["node_modules", "dist", "crds"]
}
