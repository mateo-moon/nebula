#!ipxe

# Get IP from DHCP
dhcp

kernel http://dl-cdn.alpinelinux.org/alpine/latest-stable/releases/x86_64/netboot/vmlinuz-virt ip=dhcp alpine_repo=http://dl-cdn.alpinelinux.org/alpine/latest-stable/main modloop=http://dl-cdn.alpinelinux.org/alpine/latest-stable/releases/x86_64/netboot/modloop-virt console=ttyS0,38400n8d ssh_key=https://github.com/mateo-moon.keys source_script=/bootstrap cgroup_enable=cpuset cgroup_enable=memory cgroup_memory=1
initrd http://dl-cdn.alpinelinux.org/alpine/latest-stable/releases/x86_64/netboot/initramfs-virt
initrd ${base-url}/config/alpine/initramfs_init.sh /init mode=755
initrd ${base-url}/config/alpine/alpine /bootstrap mode=755
boot
